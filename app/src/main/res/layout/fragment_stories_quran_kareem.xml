<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.fragment.items.StoriesQuranKareemFragment">

    <TextView
        android:id="@+id/blank6_toolbar"
        style="@style/ToolbarApplicationStyle"
        android:text="قصص القرآن الكريم"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon_back"
        style="@style/IconToolbarStyle"
        app:layout_constraintBottom_toBottomOf="@id/blank6_toolbar"
        app:layout_constraintStart_toStartOf="@id/blank6_toolbar"
        app:layout_constraintTop_toTopOf="@id/blank6_toolbar" />

    <EditText
        android:id="@+id/black6_search"
        style="@style/SearchViewStyle"
        android:hint="بحث"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/blank6_toolbar" />


    <androidx.recyclerview.widget.RecyclerView
        style="@style/RecyclerViewStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/black6_search"
        tools:listitem="@layout/quran_store_item" />

</androidx.constraintlayout.widget.ConstraintLayout>