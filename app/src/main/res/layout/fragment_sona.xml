<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screen.fragment.more.SonaFragment">

    <TextView
        android:id="@+id/blank7_toolbar"
        style="@style/ToolbarApplicationStyle"
        android:text="السنة النبوية"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon_back"
        style="@style/IconToolbarStyle"
        app:layout_constraintBottom_toBottomOf="@id/blank7_toolbar"
        app:layout_constraintStart_toStartOf="@id/blank7_toolbar"
        app:layout_constraintTop_toTopOf="@id/blank7_toolbar" />

    <EditText
        android:id="@+id/black7_search"
        style="@style/SearchViewStyle"
        android:hint="بحث"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/blank7_toolbar" />

    <androidx.recyclerview.widget.RecyclerView
        style="@style/RecyclerViewStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/black7_search"
        tools:listitem="" />

</androidx.constraintlayout.widget.ConstraintLayout>