<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Imuslim" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Imuslim" parent="Base.Theme.Imuslim" />

    <style name="ToolbarApplicationStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bacg_toolbar</item>
    </style>

    <style name="TextItemStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="fontFamily">@font/ar</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextItemMoreStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SearchViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:background">@drawable/bacg_search</item>
        <item name="android:backgroundTint">@color/search_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColorHint">@color/third_color</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
    </style>

    <style name="IconToolbarStyle">
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="tint">@color/white</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextDuaStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:overScrollMode">always</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/ar</item>
        <item name="android:background">@drawable/bacg_big_box</item>
    </style>

    <style name="BoxMoreStyle">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:background">@drawable/bacg_other</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="LayoutLanguageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TextTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDescriptionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/third_color</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>